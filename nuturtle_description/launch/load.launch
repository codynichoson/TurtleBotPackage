<launch>
    <arg name="use_rviz" default="true"/>
    <arg name="use_jsp" default="false"/>

    <node pkg="rviz" type="rviz" name="rviz" required="true" 
        args="-d $(find turtlebot3_navigation)/rviz/turtlebot3_navigation.rviz" if="$(eval arg('use_rviz')==true)"/>

    <param name="robot_description" command="$(find xacro)/xacro $(find nuturtlebot3_description)/urdf/turtlebot3_burger.urdf.xacro" />

    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" if="$(eval arg('use_jsp')==true)"/>

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" />


</launch>